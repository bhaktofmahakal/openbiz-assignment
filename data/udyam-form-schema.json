        "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
        "message": "PAN must be in format: ABCDE1234F (5 letters, 4 numbers, 1 letter)",
        "required": true
      },
      "panHolderName": {
        "pattern": "^[a-zA-Z\\s]{2,100}$",
        "message": "Name must contain only letters and spaces (2-100 characters)",
        "required": true
      },
      "dateOfBirth": {
